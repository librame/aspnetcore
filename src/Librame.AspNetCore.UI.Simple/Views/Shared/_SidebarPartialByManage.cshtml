@model IApplicationContext
@{
    var navs = Model.Navigations.GetManageSidebarNavigation();
}
<ul class="nav">
    @if (navs.IsNotNullOrEmpty())
    {
        foreach (var nav in navs)
        {
            if ((nav.VisibilityFactory?.Invoke(this)).Value)
            {
                <li class="nav-item @nav.ActiveClassNameFactory?.Invoke(this)">
                    <a id="@nav.Id" asp-page="@nav.Href" title="@nav.Title">
                        <i class="@nav.Icon"></i>
                        <p>@nav.Text</p>
                    </a>
                </li>
            }
        }
    }
</ul>

